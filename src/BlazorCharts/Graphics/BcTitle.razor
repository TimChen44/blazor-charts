@namespace BlazorCharts
@inherits ElementChart<TData>
@typeparam TData

@if (Chart?.IsInit ?? false)
{
    <g class="bc-title" transform="translate(@((Rect.LT).ToPoint()))">
        <text x="@TitleX" y="@TitleY" text-anchor="@TextAnchor.ToDescription()" font-size="@FontSize">@Title</text>
    </g>
}

